<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7" >

    <FrameLayout
        android:id="@+id/title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_back" >

        <ImageView
            android:id="@+id/setings_button"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_gravity="left"
            android:paddingLeft="05dip"
            android:paddingTop="07dip"
            android:src="@drawable/settings" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="30dip"
            android:layout_gravity="left"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="10dip"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_data_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_container"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/messageinbound_border"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="05dip"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/data_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/first_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/messageinbound_border"
                    android:src="@drawable/about" />

                <TextView
                    android:id="@+id/second_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="The main menu offers a number of choices:"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>